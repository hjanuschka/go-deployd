{
  "properties": {
    "name": {
      "type": "string",
      "required": true,
      "index": true
    },
    "breed": {
      "type": "string",
      "required": true,
      "index": true
    },
    "age": {
      "type": "number",
      "required": true,
      "index": true
    },
    "weight": {
      "type": "number"
    },
    "color": {
      "type": "string"
    },
    "vaccinated": {
      "type": "boolean",
      "default": false
    },
    "owner": {
      "type": "string",
      "index": true
    },
    "notes": {
      "type": "string"
    },
    "adoptionDate": {
      "type": "date"
    },
    "createdAt": {
      "type": "date",
      "default": "now"
    }
  },
  "options": {
    "useColumns": true
  },
  "eventConfig": {
    "validate": {
      "runtime": "js"
    },
    "post": {
      "runtime": "js"
    },
    "put": {
      "runtime": "js"
    },
    "get": {
      "runtime": "js"
    },
    "delete": {
      "runtime": "js"
    }
  }
}