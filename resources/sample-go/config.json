{
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "species": {
      "type": "string",
      "required": true
    },
    "breed": {
      "type": "string",
      "required": true
    },
    "age": {
      "type": "number",
      "required": true
    },
    "weight": {
      "type": "number"
    },
    "color": {
      "type": "string"
    },
    "microchipId": {
      "type": "string",
      "index": true
    },
    "vaccinated": {
      "type": "boolean",
      "default": false
    },
    "spayedNeutered": {
      "type": "boolean",
      "default": false
    },
    "owner": {
      "type": "string",
      "index": true
    },
    "vetNotes": {
      "type": "string"
    },
    "emergencyContact": {
      "type": "string"
    },
    "adoptionDate": {
